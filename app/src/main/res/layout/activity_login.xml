<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/app_bg"
    tools:context=".LoginActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Donate Nearby"
        android:fontFamily="@font/andikabold"
        android:textColor="@color/blue"
        android:shadowColor="@color/yellow"
        android:shadowDx="5"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:textSize="40sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Give Together, Grow Together"
        android:textColor="@color/yellow"
        android:textSize="16sp"
        android:fontFamily="@font/andikabolditalic"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="#F0F4F8">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LogIn"
                android:textSize="35sp"
                android:fontFamily="@font/andikabolditalic"
                android:textColor="#2C3E50"
                android:gravity="center"
                android:layout_marginTop="5dp"/>
            <RadioGroup
                android:id="@+id/radioGroupUserType"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">

                <RadioButton
                    android:id="@+id/radioDonor"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Donor"
                    android:fontFamily="@font/andikabold"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:buttonTint="@color/blue"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioOrphanage"
                    android:layout_weight="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Orphanage"
                    android:fontFamily="@font/andikabold"
                    android:textSize="16sp"
                    android:buttonTint="@color/blue"
                    android:textColor="@color/blue" />

            </RadioGroup>


            <EditText
                android:id="@+id/editTextLoginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textSize="17sp"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="10dp"
                android:background="@color/yellow"
                android:layout_margin="12dp" />

            <EditText
                android:id="@+id/editTextLoginPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textSize="17sp"
                android:textColor="@color/blue"
                android:textColorHint="@color/blue"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="10dp"
                android:background="@color/yellow"
                android:layout_margin="12dp" />

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textSize="20sp"
                android:backgroundTint="@color/bluegreen"
                android:textColor="@color/white"
                android:layout_margin="8dp" />

            <TextView
                android:id="@+id/textViewRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Don't have an account? Register here."
                android:gravity="center"
                android:textColor="@color/blue"
                android:fontFamily="@font/andikaitalic"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>