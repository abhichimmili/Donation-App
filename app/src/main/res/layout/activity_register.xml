<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/app_bg"
    tools:context=".RegisterActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center"
        android:text="Donate Nearby"
        android:fontFamily="@font/andikabold"
        android:textColor="@color/blue"
        android:shadowColor="@color/yellow"
        android:shadowDx="5"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:textSize="38sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:text="Give Together, Grow Together"
        android:textColor="@color/yellow"
        android:textSize="15sp"
        android:fontFamily="@font/andikabolditalic"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20sp"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SignUp"
                    android:textSize="32sp"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/andikabolditalic"
                    android:textColor="#2C3E50"
                    android:gravity="center"/>
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleButtonGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    app:selectionRequired="true"
                    app:singleSelection="true">
                    <Button
                        android:id="@+id/buttonDonor"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Donor" />

                    <Button
                        android:id="@+id/buttonOrphanage"
                        style="?attr/materialButtonOutlinedStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orphanage" />
                </com.google.android.material.button.MaterialButtonToggleGroup>
                <EditText
                    android:id="@+id/editTextRegEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="9dp"
                    android:textSize="16sp"
                    android:background="@color/yellow"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/blue"
                    android:drawableLeft="@drawable/baseline_email_24"
                    android:drawablePadding="10dp"
                    android:layout_margin="8dp" />

                <EditText
                    android:id="@+id/editTextRegPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="9dp"
                    android:textSize="16sp"
                    android:background="@color/yellow"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/blue"
                    android:drawableLeft="@drawable/baseline_lock_24"
                    android:drawablePadding="10dp"
                    android:layout_margin="8dp" />

                <EditText
                    android:id="@+id/editTextRegConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:padding="9dp"
                    android:textSize="16sp"
                    android:background="@color/yellow"
                    android:textColor="@color/blue"
                    android:textColorHint="@color/blue"
                    android:drawableLeft="@drawable/baseline_lock_24"
                    android:drawablePadding="10dp"
                    android:layout_margin="8dp" />
                <LinearLayout
                    android:id="@+id/layoutDonorFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <EditText
                        android:id="@+id/editTextDonorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Your Name"
                        android:inputType="textPersonName"
                        android:padding="9dp"
                        android:textSize="16sp"
                        android:background="@color/yellow"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/blue"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="10dp"
                        android:layout_margin="8dp" />

                    <EditText
                        android:id="@+id/editTextDonorPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:padding="9dp"
                        android:background="@color/yellow"
                        android:textSize="16sp"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/blue"
                        android:drawableLeft="@drawable/baseline_phone_24"
                        android:drawablePadding="10dp"
                        android:layout_margin="8dp" />

                    <EditText
                        android:id="@+id/editTextDonorAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address"
                        android:inputType="textPostalAddress"
                        android:padding="9dp"
                        android:background="@color/yellow"
                        android:textSize="16sp"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/blue"
                        android:drawableLeft="@drawable/outline_add_location_24"
                        android:drawablePadding="10dp"
                        android:layout_margin="8dp"
                        android:minLines="2"
                        android:maxLines="4"
                        android:gravity="top|start"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutOrphanageFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/editTextOrphanageName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Orphanage Name"
                        android:inputType="textPersonName"
                        android:padding="9dp"
                        android:background="@color/yellow"
                        android:textSize="16sp"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/blue"
                        android:drawableLeft="@drawable/outline_group_24"
                        android:drawablePadding="10dp"
                        android:layout_margin="8dp" />

                    <EditText
                        android:id="@+id/editTextOrphanageRegNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Registration Number"
                        android:inputType="text"
                        android:padding="9dp"
                        android:background="@color/yellow"
                        android:textSize="16sp"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/blue"
                        android:drawableLeft="@drawable/outline_docs_24"
                        android:drawablePadding="10dp"
                        android:layout_margin="8dp"/>

                    <EditText
                        android:id="@+id/editTextOrphanageContactPerson"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Contact Person"
                        android:inputType="textPersonName"
                        android:padding="9dp"
                        android:background="@color/yellow"
                        android:textSize="16sp"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/blue"
                        android:drawableLeft="@drawable/baseline_person_24"
                        android:drawablePadding="10dp"
                        android:layout_margin="8dp"/>

                    <EditText
                        android:id="@+id/editTextOrphanagePhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Orphanage Phone Number"
                        android:inputType="phone"
                        android:padding="9dp"
                        android:background="@color/yellow"
                        android:textSize="16sp"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/blue"
                        android:drawableLeft="@drawable/baseline_phone_24"
                        android:drawablePadding="10dp"
                        android:layout_margin="8dp" />
                    <EditText
                        android:id="@+id/editTextOrphanageAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Orphanage Address"
                        android:inputType="textPostalAddress"
                        android:padding="9dp"
                        android:background="@color/yellow"
                        android:textSize="16sp"
                        android:textColor="@color/blue"
                        android:textColorHint="@color/blue"
                        android:drawableLeft="@drawable/outline_add_location_24"
                        android:drawablePadding="10dp"
                        android:layout_margin="8dp"
                        android:minLines="2"
                        android:maxLines="4"
                        android:gravity="top|start"/>
                </LinearLayout>

                <Button
                    android:id="@+id/buttonRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REGISTER"
                    android:backgroundTint="@color/bluegreen"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/textViewBackToLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? Login here."
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:fontFamily="@font/andikabolditalic"
                    android:textSize="15sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginBottom="15dp"/>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>