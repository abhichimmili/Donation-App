<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orphanageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orphanage Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/orphanageAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address (Distance)"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/orphanageDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Short description of the orphanage."
                android:textSize="12sp"
                android:textColor="#999999" />
        </LinearLayout>

        <Button
            android:id="@+id/selectOrphanageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:backgroundTint="#0097b2"
            app:cornerRadius="8dp"
            android:layout_marginStart="16dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>