<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrphHomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <ImageView
            android:id="@+id/background_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bg"
            android:layout_marginBottom="35dp"/>
        <TextView
            android:id="@+id/headertxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Caring Home"
            android:textSize="22sp"
            android:textColor="@color/blue"
            android:shadowColor="@color/yellow"
            android:shadowDx="2"
            android:shadowRadius="1"
            android:gravity="center"
            android:layout_marginEnd="100dp"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/andikabold"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/orph_profile"
            android:src="@drawable/homeimg"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/events_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="12dp"
        android:elevation="4dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                android:id="@+id/events_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📅 Events Going On"
                android:textSize="17sp"
                android:fontFamily="@font/andikabold"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/event_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🧁 Bake Sale Fundraiser – June 30"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:fontFamily="@font/andikaregular"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/event_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎨 Art Workshop for Children – July 5"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:fontFamily="@font/andikaregular"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/event_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🎉 Orphanage Day Celebration – July 25"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:fontFamily="@font/andikaregular"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/view_all_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All →"
                android:layout_marginStart="200dp"
                android:fontFamily="@font/andikaitalic"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/orphanage_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        android:elevation="6dp">

        <LinearLayout
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="16dp">
            <TextView
                android:id="@+id/orphanage_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andikabolditalic"
                android:text="Sunrise Orphanage"
                android:textColor="@color/yellow"
                android:textSize="22sp" />

            <LinearLayout
                android:id="@+id/expandable_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/orphanage_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/andikaregular"
                    android:text="📍 Hyderabad, Telangana"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/orphanage_motto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:text="“Empowering young lives with love and learning.”"
                    android:textColor="@color/bluegreen"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/orphanage_children_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/andikaitalic"
                    android:text=" Children : 42"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/orphanage_top_needs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/andikaitalic"
                    android:text="NEEDS: School Bags, Notebooks, Shoes"
                    android:textSize="15sp" />

                <ProgressBar
                    android:id="@+id/needs_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="6dp"
                    android:max="100"
                    android:progress="40"
                    android:progressTint="@color/bluegreen" />

                <TextView
                    android:id="@+id/orphanage_updated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Last updated: 24 June 2025"
                    android:textColor="@color/black"
                    android:fontFamily="@font/andikaitalic"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">
        <TextView
            android:id="@+id/events_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Items"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:fontFamily="@font/andikabolditalic"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            />

    </LinearLayout>
</LinearLayout>
</ScrollView>