<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f4f8"
    tools:context=".PurchaseFragment">
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#0097b2"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/view_cart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffd600"
            android:textColor="#333333"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="View Cart (0)"
            android:visibility="gone" />
    </LinearLayout>
    <TextView
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Support Through Purchase!"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="24sp"
        android:background="@drawable/app_bg"
        android:textStyle="bold"
        android:fontFamily="@font/andikabold"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_bg"
        android:layout_below="@id/main_title"
        android:padding="5dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/mobile_cart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:backgroundTint="#ffd600"
        app:tint="@color/white"
        app:srcCompat="@drawable/shopping_cart" />

    <TextView
        android:id="@+id/fab_cart_item_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@id/mobile_cart_button"
        android:layout_alignEnd="@id/mobile_cart_button"
        android:background="@drawable/circle_red"
        android:gravity="center"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:elevation="16dp" />

</RelativeLayout>
